# URL of the deployed frontend used for generating absolute links
NEXT_PUBLIC_SITE_URL=https://your-frontend-domain.com

# Base URL of the Strapi CMS API (without trailing slash)
STRAPI_API_URL=https://cms.your-domain.com

# API token for authenticating with Strapi
STRAPI_API_TOKEN=your-strapi-api-token

# Optional CDN URL for loading media assets
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com
